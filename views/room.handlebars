<form method="GET" action="/rooms">
  <input type="text" class="form-control input-lg" placeholder="{{friendlyRoomName room}}" id="room" name="room">
  <button type="button" class="btn btn-primary" id="find_button">Find schedule <span class="glyphicon glyphicon-chevron-right"></span></button>
</form>

{{#hasClasses}}
  <h2>{{dayName}} in {{friendlyRoomName room}}</h2>
  <ul class="classes">
  {{#each classes}}
    {{#if isGap}}
      <li class="gap half-hours-{{halfHours}}">
        <span class="time">{{StartTime}} - {{EndTime}}</span>
        <h3>Gap</h3>
        <small>This room is free.</small>
      </li>
    {{else}}
      <li class="{{DeptAcronym}}{{Number}} half-hours-{{halfHours}}">
        <span class="time">{{StartTime}} - {{EndTime}}</span>
        <h3>{{DeptAcronym}} {{Number}} &middot; {{Title}}</h3>
        <small>{{classType}} &middot; {{Instructor}}</small>
      </li>
    {{/if}}
  {{/each}}
  </ul>
{{else}}
	<h2>There are no classes in {{friendlyRoomName room}} on {{dayName}}.</h2>
{{/hasClasses}}

<div id="time-traveler">
  <a href="/rooms/{{room}}/{{downcase lastWeekDay}}" class="previous"><span class="glyphicon glyphicon-chevron-left"></span> {{lastWeekDay}}</a>
  <a href="/rooms/{{room}}/{{downcase nextWeekDay}}" class="next">{{nextWeekDay}} <span class="glyphicon glyphicon-chevron-right"></span></a>
</div>

<script type="text/javascript">
  mixpanel.track(
    "Viewed Room Schedule",
    {
      'Building and Room': '{{friendlyRoomName room}}',
      'Building': '{{buildingName room}}',
      'Room Number': '{{roomNumber room}}',
      'Day of Week': '{{dayName}}',
      'Today?': '{{isToday}}',
      '# of Classes': {{numberOfClasses}},
      '# of Gaps': {{numberOfGaps}}
    });
</script>